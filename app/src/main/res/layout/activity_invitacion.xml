<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Encabezado -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/purple_700"
        android:gravity="center_vertical">

        <!-- Texto Encabezado -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invitaciones"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_weight="1"/>

        <!-- Icono configuración -->
        <ImageView
            android:id="@+id/btnAyuda"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_configuration"
            android:tint="@color/white"
            android:padding="1dp"/>
    </LinearLayout>

    <!-- Barra de búsqueda -->
    <EditText
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/headerLayout"
        android:hint="Buscar"
        android:background="@drawable/campo_redondeado_busqueda"
        android:paddingLeft="16dp"
        android:drawablePadding="10dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black"/>

    <!-- Sección de Invitaciones -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchBar"
        android:text="Invitaciones"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/black"/>

    <!-- Botón flotante para agregar contactos -->
    <LinearLayout
        android:id="@+id/invitacionesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchBar"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:padding="38dp">

        <LinearLayout
            android:layout_width="352dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_user"
                android:tint="@color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nombre del Contacto"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_cancel"
                android:tint="@color/red" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_check"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Menú inferior -->
    <ImageView
        android:id="@+id/btnAgregarContacto"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="70dp"
        android:elevation="8dp"
        android:padding="12dp"
        android:src="@drawable/ic_add"/>

        <LinearLayout
         android:id="@+id/menuInferior"
         android:layout_width="match_parent"
         android:layout_height="64dp"
         android:layout_alignParentBottom="true"
         android:orientation="horizontal"
         android:gravity="center"
         android:padding="8dp"
         android:background="@color/purple_500">

 <!-- Botón Grupos -->
        <LinearLayout
            android:id="@+id/btnGrupos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_groups"
                android:tint="@color/white"/>

            <TextView
                android:id="@+id/tvGrupos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grupos"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_weight="1"/>

        </LinearLayout>

        <!-- Botón Chats -->
        <LinearLayout
            android:id="@+id/btnChats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_chat"
                android:tint="@color/white"/>

            <TextView
                android:id="@+id/tvChats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chats"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_weight="1"/>

        </LinearLayout>

        <!-- Botón Invitación -->
        <LinearLayout
            android:id="@+id/btnInvitacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_invite"
                android:tint="@color/white"/>

            <TextView
                android:id="@+id/tvInvitacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invitacion"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
